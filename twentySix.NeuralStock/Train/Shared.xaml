<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">

    <Style x:Key="TextEditReadOnlyStyle"
           TargetType="dxe:TextEdit">
        <Setter Property="FontFamily" Value="Work Sans Light" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="ShowBorder" Value="False" />
    </Style>

    <Style x:Key="TextEditReadOnlyBoldStyle"
           BasedOn="{StaticResource TextEditReadOnlyStyle}"
           TargetType="dxe:TextEdit">
        <Setter Property="FontFamily" Value="Work Sans" />
        <Setter Property="FontSize" Value="22" />
    </Style>

</ResourceDictionary>